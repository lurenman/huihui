<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/payment_item"
    android:layout_width="match_parent"
    android:layout_height="98dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="98dp">
        <LinearLayout
            android:id="@+id/payment_item_a"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#AEAEAE"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"/>
        

        
        <ImageView
            android:id="@+id/payment_item_dot"
            android:layout_width="1dp"
            android:layout_height="110dp"
            android:background="@drawable/payment_item_dot"
            android:layout_marginLeft="284dp"
            android:layout_below="@id/payment_item_a"/>
        <TextView
            android:id="@+id/payment_item_title"
            android:layout_height="wrap_content"
            android:text="红红火火恍恍惚啊啊啊啊啊啊啊啊啊啊惚"
            android:textColor="#333333"
            android:textSize="@dimen/fontc"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_width="254dp"
            android:maxEms="18"
            android:maxLines="1"
            android:ellipsize="end"/>

        <ImageView
            android:id="@+id/payment_item_location"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@id/payment_item_title"
            android:layout_marginBottom="10dp"
            android:src="@drawable/home_item_location" />

        <TextView
            android:id="@+id/payment_item_address"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignTop="@id/payment_item_location"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/payment_item_location"
            android:gravity="center|left"
            android:text="这里是美丽的杭州"
            android:textColor="#666666"
            android:textSize="@dimen/fontb" />

        <ImageView
            android:id="@+id/payment_item_clock"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_above="@id/payment_item_address"
            android:layout_alignLeft="@id/payment_item_title"
            android:layout_marginBottom="10dp"
            android:src="@drawable/home_item_clock" />

        <TextView
            android:id="@+id/payment_item_date"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignTop="@id/payment_item_clock"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/payment_item_clock"
            android:gravity="center|left"
            android:text="2016年即将过去了"
            android:textColor="#666666"
            android:textSize="@dimen/fontb" />
        
        <TextView
            android:id="@+id/payment_item_type"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="QQ会员"
            android:textSize="@dimen/fontb"
            android:gravity="center"
            android:textColor="#FFD47D"
            android:layout_alignTop="@id/payment_item_address"
            android:layout_marginLeft="220dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/payment_item_radiobutton"/>


        <TextView
            android:id="@+id/payment_item_price"
            android:layout_width="72dp"
            android:layout_height="18dp"
            android:text="Y998"
            android:textSize="@dimen/fontb"
            android:gravity="center"
            android:textColor="#333333"
            android:layout_alignTop="@id/payment_item_address"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/payment_item_null"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/payment_item_null"
            android:layout_marginTop="5dp"
            android:visibility="gone"/>

    </RelativeLayout>
</RelativeLayout>