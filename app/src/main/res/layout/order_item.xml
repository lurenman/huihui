<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/order_item_image"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/order_item_title"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/order_item_image"
            android:gravity="start"
            android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
            android:textSize="@dimen/fontc"
            android:textColor="#000000"/>

        <ImageView
            android:id="@+id/order_item_clock"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@id/order_item_title"
            android:layout_below="@id/order_item_title"
            android:layout_marginTop="4dp"
            android:src="@drawable/home_item_clock" />

        <TextView
            android:id="@+id/order_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/order_item_clock"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/order_item_clock"
            android:gravity="center|left"
            android:text="2016年即将过去了"
            android:textSize="@dimen/fontb"
            android:textColor="#AEAEAE"/>

        <TextView
            android:id="@+id/order_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/order_item_date"
            android:layout_marginRight="15dp"
            android:text="SVIP"
            android:textColor="#FFCC66"
            android:textSize="@dimen/fontb" />

        <ImageView
            android:id="@+id/order_item_location"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignLeft="@id/order_item_clock"
            android:layout_below="@id/order_item_clock"
            android:layout_marginTop="1dp"
            android:src="@drawable/home_item_location" />

        <TextView
            android:id="@+id/order_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/order_item_location"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/order_item_location"
            android:gravity="center|left"
            android:text="这里是美丽的杭州"
            android:textSize="@dimen/fontb"
            android:textColor="#AEAEAE"/>

        <TextView
            android:id="@+id/order_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/order_item_address"
            android:layout_marginRight="15dp"
            android:text="￥888"
            android:textSize="@dimen/fontb"
            android:textColor="#AEAEAE"/>

        <LinearLayout
            android:id="@+id/order_item_a"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@id/order_item_image"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/order_item_b"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/order_item_a">

            <include layout="@layout/c_blackline" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/order_item_payment"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_below="@id/order_item_b">

            <TextView
                android:id="@+id/order_item_ticketstatus"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginLeft="6dp"
                android:textSize="@dimen/fontb"
                android:text="啦啦啦"
                android:textColor="#AEAEAE"/>


            <TextView
                android:id="@+id/order_item_support"
                android:layout_width="72dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:background="@drawable/textview_bg_w"
                android:gravity="center"
                android:text="联系客服"
                android:textColor="@color/appComponentColor"
                android:textSize="@dimen/fontb" />

            <TextView
                android:id="@+id/order_item_invoice"
                android:layout_width="72dp"
                android:layout_height="25dp"
                android:layout_toLeftOf="@id/order_item_support"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:background="@drawable/textview_bg_w"
                android:gravity="center"
                android:text="索要发票"
                android:textColor="@color/appComponentColor"
                android:textSize="@dimen/fontb" />

            <TextView
                android:id="@+id/order_item_eticket"
                android:layout_width="72dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@id/order_item_invoice"
                android:background="@drawable/textview_bg_b"
                android:gravity="center"
                android:text="电子票"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/fontb" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/order_item_d"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/order_item_payment">

            <include layout="@layout/c_blackline" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>