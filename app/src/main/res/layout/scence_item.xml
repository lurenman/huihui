<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scence_item_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="152dp">


    <View
        android:layout_alignParentLeft="true"
        android:layout_width="1dp"
        android:layout_height="180dp"
        android:background="#AEAEAE"
        android:layout_marginLeft="73dp"
        android:id="@+id/bluelinaeb" />


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/scence_item_image"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="24dp"
        android:layout_marginRight="15dp"
        android:background="#0099FF" />

    <ImageView
        android:id="@+id/scence_item_blue"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginLeft="52dp"
        android:layout_alignTop="@id/scence_item_image"
        android:layout_marginTop="20dp"
        android:background="@drawable/scence_item_blue" />


    <TextView
        android:id="@+id/scence_item_title"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:text="哈哈哈哈哈哈哈哈哈哈"
        android:gravity="start"
        android:textSize="@dimen/fontc"
        android:layout_toLeftOf="@id/scence_item_image"
        android:layout_alignTop="@id/scence_item_image"
        android:layout_marginRight="24dp"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/scence_item_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/scence_item_title"
        android:gravity="center|left"
        android:textSize="@dimen/fonta"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="16dp"
        android:textColor="#333333"
        android:text="2017" />

    <TextView
        android:id="@+id/scence_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scence_item_year"
        android:gravity="center"
        android:textSize="@dimen/fontc"
        android:textColor="#333333"
        android:layout_marginLeft="14dp"
        android:text="12/12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_below="@id/scence_item_date"
        android:gravity="center|left"
        android:textSize="@dimen/fonta"
        android:text="12:12"
        android:textColor="#333333"
        android:id="@+id/scence_item_time" />

    <ImageView
        android:id="@+id/scence_item_location"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/home_item_location"
        android:layout_alignBottom="@id/scence_item_image"
        android:layout_marginBottom="4dp"
        android:layout_alignLeft="@id/scence_item_title" />

    <TextView
        android:id="@+id/scence_item_address"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:text="这里是美丽的杭州"
        android:textSize="@dimen/fonta"
        android:gravity="start"
        android:layout_alignTop="@id/scence_item_location"
        android:layout_toRightOf="@id/scence_item_location"
        android:layout_marginLeft="2dp"
        android:textColor="#AEAEAE" />

</RelativeLayout>