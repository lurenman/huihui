<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/my_dialog_bg"
        android:layout_width="260dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <LinearLayout
            android:gravity="center"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"


            android:layout_width="260dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dialog_title1"
                    android:textSize="@dimen/textsize_big"
                    android:textColor="@color/textcolor_dark"
                    android:text="拨打"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:id="@+id/tv_phonenumber"
                    android:textColor="@color/textcolor_dark"
                    android:textSize="@dimen/textsize_big"
                    android:text="17767251803?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>




        </LinearLayout>
        <View
            android:background="@color/the_line_color"
            android:layout_marginLeft="5dp"
            android:layout_width="250dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <Button
                android:background="@null"
                android:text="取消"
                android:id="@+id/mydialog_tv_cancel"

                android:gravity="center"
                android:textSize="@dimen/textsize_big"
                android:textColor="@color/textcolor_dark"


                android:layout_weight="1"
                style="@style/layout_horizontal" />

            <View

                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@color/the_line_color"
                android:layout_width="1dp"
                android:layout_height="35dp"/>
            <Button
                android:background="@null"
                android:id="@+id/mydialog_tv_confirm"
                android:text="确认"
                android:gravity="center"

                android:textSize="@dimen/textsize_big"
                android:textColor="@color/textcolor_dark"


                android:layout_weight="1"
                style="@style/layout_horizontal" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
