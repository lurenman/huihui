<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hui2020.huihui.Scence.ScencedetailActivity">

    <RelativeLayout
        android:id="@+id/scencedetail_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/appColor">

        <include layout="@layout/c_back"
            android:id="@+id/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="现场详情页"
            android:textSize="@dimen/fontd"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/scencedetail_tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabIndicatorColor="@color/appComponentColor"
        app:tabSelectedTextColor="@color/appComponentColor"
        app:tabTextColor="#000000"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/scencedetail_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
