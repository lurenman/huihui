<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ticket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical"

    tools:context="com.hui2020.huihui.Personal.Order.TicketActivity">
    <RelativeLayout
        android:id="@+id/order_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/appColor">

        <include layout="@layout/c_back"
            android:id="@+id/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我的订单"
            android:textSize="@dimen/fontd"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <LinearLayout
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/fontb"
            android:textColor="#000000"
            android:text="付款成功"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="93dp">

        <ImageView
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ticket_logo"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/ticket_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text="票号：1000000000000"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/fontb" />

    </RelativeLayout>

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ticket_dot" />

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:background="#FFFFFF"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/ticket_qrcode"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp" />

        <TextView
            android:id="@+id/ticket_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="此处应有标题"
            android:textColor="#000000"
            android:textSize="@dimen/fontb"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ticket_dot" />

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <ImageView

            android:id="@+id/ticket_clock"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/home_item_clock" />

        <TextView
            android:id="@+id/ticket_date"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignTop="@id/ticket_clock"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/ticket_clock"
            android:gravity="center|left"
            android:text="2016年即将过去了"
            android:textSize="@dimen/fontb"
            android:textColor="#AEAEAE"/>


        <ImageView
            android:id="@+id/ticket_location"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@id/ticket_clock"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/home_item_location" />

        <TextView
            android:id="@+id/ticket_address"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignTop="@id/ticket_location"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/ticket_location"
            android:gravity="center|left"
            android:text="这里是美丽的杭州"
            android:textSize="@dimen/fontb"
            android:textColor="#AEAEAE"/>


        <ImageView
            android:id="@+id/ticket_phone"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@id/ticket_location"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/carddetail_phone_image" />

        <TextView
            android:id="@+id/ticket_hostphone"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignTop="@id/ticket_phone"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/ticket_phone"
            android:gravity="center|left"
            android:text="13888888888"
            android:textSize="@dimen/fontb"
            android:textColor="#AEAEAE"/>

    </RelativeLayout>

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ticket_dot" />
<LinearLayout
    android:padding="3dp"
    android:background="#FFFFFF"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <ImageView

        android:layout_marginLeft="10dp"
        android:background="@drawable/ticks"
        android:layout_width="20dp"
        android:layout_height="20dp" />
    <TextView

        android:id="@+id/ticket_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:paddingLeft="10dp"
        android:text="类型：SVIP"
        android:textColor="#AEAEAE"
        android:textSize="@dimen/fontb" />
</LinearLayout>
        <LinearLayout
            android:padding="3dp"
            android:background="#FFFFFF"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView

                android:layout_marginLeft="10dp"
                android:background="@drawable/american_dollar"
                android:layout_width="20dp"
                android:layout_height="20dp" />
    <TextView


        android:id="@+id/ticket_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="10dp"
        android:text="价格：$666"
        android:textColor="#AEAEAE"
        android:textSize="@dimen/fontb" />
</LinearLayout>
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ticket_dot" />
        <LinearLayout
            android:padding="3dp"
            android:background="#FFFFFF"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView

                android:layout_marginLeft="10dp"
                android:background="@drawable/name"
                android:layout_width="20dp"
                android:layout_height="20dp" />
    <TextView

        android:id="@+id/ticket_ticketname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center|left"
        android:paddingLeft="10dp"
        android:text="姓名：哈哈哈"
        android:textColor="#AEAEAE"
        android:textSize="@dimen/fontb" />
</LinearLayout>
        <LinearLayout
            android:padding="3dp"
            android:background="#FFFFFF"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView

                android:layout_marginLeft="10dp"
                android:background="@drawable/phone1"
                android:layout_width="20dp"
                android:layout_height="20dp" />
    <TextView
        android:id="@+id/ticket_ticketphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="10dp"
        android:text="电话：13888888888"
        android:textColor="#AEAEAE"
        android:textSize="@dimen/fontb" />
</LinearLayout>
        <LinearLayout
            android:padding="3dp"
            android:background="#FFFFFF"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView

                android:layout_marginLeft="10dp"
                android:background="@drawable/compy"
                android:layout_width="20dp"
                android:layout_height="20dp" />
    <TextView

        android:id="@+id/ticket_ticketcompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:paddingLeft="10dp"
        android:text="公司：时之狭间"
        android:textColor="#AEAEAE"
        android:textSize="@dimen/fontb" />
</LinearLayout>
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView

                android:layout_marginLeft="10dp"
                android:background="@drawable/job"
                android:layout_width="20dp"
                android:layout_height="20dp" />
    <TextView
        android:id="@+id/ticket_ticketjob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="10dp"
        android:text="职务：CEO"
        android:textColor="#AEAEAE"
        android:textSize="@dimen/fontb" />

</LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
