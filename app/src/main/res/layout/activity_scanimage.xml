<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scanimage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hui2020.huihui.Home.Scanimage"
    android:weightSum="10">



    <!-- 整体透明画布 -->
    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.hui2020.huihui.zxing.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/activity_scanimage_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0099ff"
        android:layout_alignParentTop="true">
        <!-- 不要修改这里，不然扫码会出问题！！！！！ -->
        <ImageButton
            android:id="@+id/back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/selector_capture_back"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="@dimen/fontd"
            android:textColor="#FFFFFF"
            android:text="扫描二维码"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <!-- 不要修改这里，不然扫码会出问题！！！！！ -->


</RelativeLayout>
