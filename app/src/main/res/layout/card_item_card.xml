<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/card_item_card_search"
        android:layout_width="fill_parent"
        android:layout_height="26dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/search_edittext_bg">

        <ImageView
            android:id="@+id/search_image"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/search" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/search_image"
            android:background="@null"
            android:gravity="start"
            android:textCursorDrawable="@null"
            android:inputType="none"
            android:maxLines="1"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/card_item_card_a"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/card_item_card_search"
        android:orientation="vertical"
        android:background="#E4E4E4"/>

    <RelativeLayout
        android:id="@+id/scencedetail_card_newfriend"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scencedetail_card_a">
        <ImageView
            android:id="@+id/scencedetail_card_newfriend_image"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/scencedetail_card_newfriend"
            android:layout_alignParentLeft="true"

            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新的人脉"
            android:textSize="12sp"


            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/scencedetail_card_newfriend_image"/>
        <TextView
            android:textSize="12sp"
            android:id="@+id/scencedetail_card_newfriend_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="#0099FF"
            android:text="有新的好友申请"/>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/card_item_card_d"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_below="@id/card_item_card_search"
        android:orientation="vertical"
        android:background="#E4E4E4"/>
    <ScrollView
        android:id="@+id/card_item_card__scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/card_item_card_a">
        <LinearLayout
            android:id="@+id/card_item_card__lin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </ScrollView>

</LinearLayout>