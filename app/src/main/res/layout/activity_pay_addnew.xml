<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pay_addnew"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hui2020.huihui.Payment.Pay_addnewActivity">

    <RelativeLayout
        android:id="@+id/pay_addnew"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/appColor"
        android:layout_alignParentTop="true">
        <include
            android:id="@+id/back"
            layout="@layout/c_back" />
        <TextView
            style="@style/titletext"
            android:text="添加名片" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/pay_addnew_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:id="@+id/pay_addnew_name_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="姓名"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/fontc"/>
        <EditText
            android:id="@+id/pay_addnew_name_textin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:layout_alignParentRight="true"
            android:gravity="center|right"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:textSize="@dimen/fontb"
            android:hint="您的真实姓名（必填）"/>
    </RelativeLayout>
    <include layout="@layout/c_blackline"/>
    <RelativeLayout
        android:id="@+id/pay_addnew_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:id="@+id/pay_addnew_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="手机"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/fontc"/>
        <EditText
            android:id="@+id/pay_addnew_phone_textin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:layout_alignParentRight="true"
            android:gravity="center|right"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:textSize="@dimen/fontb"
            android:hint="您的手机号码（必填）"/>
    </RelativeLayout>
    <include layout="@layout/c_blackline"/>
    <RelativeLayout
        android:id="@+id/pay_addnew_company"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:id="@+id/pay_addnew_company_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="公司"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/fontc"/>
        <EditText
            android:id="@+id/pay_addnew_company_textin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:layout_alignParentRight="true"
            android:gravity="center|right"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:textSize="@dimen/fontb"
            android:hint="您所在的公司单位"/>
    </RelativeLayout>
    <include layout="@layout/c_blackline"/>
    <RelativeLayout
        android:id="@+id/pay_addnew_job"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:id="@+id/pay_addnew_job_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="职务"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/fontc"/>
        <EditText
            android:id="@+id/pay_addnew_job_textin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:layout_alignParentRight="true"
            android:gravity="center|right"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:textSize="@dimen/fontb"
            android:hint="所在地公司担任的职务"/>
    </RelativeLayout>
    <include layout="@layout/c_blackline"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <TextView
        android:layout_gravity="center"
        android:id="@+id/pay_addnew_confirm"
        android:layout_width="330dp"
        android:layout_height="42dp"
        android:background="@drawable/textview_bg_b"
        android:text="确 定"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/fontb"
        android:gravity="center"/>
</LinearLayout>
