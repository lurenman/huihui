<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/home_item_videopic"
        android:layout_width="match_parent"
        android:background="#0099FF"
        android:layout_height="200dp" />
    <RelativeLayout
        android:id="@+id/home_content_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:background="#66000000"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/play_btn"
            android:layout_height="40dp"
            android:src="@drawable/biz_video_list_play_icon_big"
            android:layout_centerInParent="true"
            android:layout_width="40dp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/home_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fontc"
        android:padding="18dp"
        android:text="红红火火恍恍惚惚"/>
    <LinearLayout
        android:id="@+id/home_item_a"
        android:layout_below="@id/home_item_videopic"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/home_item_videoer_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#0099FF"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:id="@+id/home_item_videoer_text"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="  宇宙管理站官方推送"
            android:maxLines="1"
            android:textColor="#666666"
            android:textSize="@dimen/fontb"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/home_item_numplay_text"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/fonta"
            android:text="播放次数4500"
            android:textColor="#666666"
            android:maxLines="1"/>
        <ImageView
            android:id="@+id/home_item_numshare_image"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/home_item_numshare"/>
        <TextView
            android:id="@+id/home_item_numshare_text"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/fonta"
            android:text=" 4000次"
            android:textColor="#666666"
            android:maxLines="1"/>
        <ImageView
            android:id="@+id/home_item_tool"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/home_item_tool"/>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AEAEAE"
        android:layout_below="@id/home_item_a"/>
</RelativeLayout>