<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cardact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hui2020.huihui.Card.CardActActivity"
    android:background="#00000000">

    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardact_null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E4E4E4"/>
        <TextView
            android:id="@+id/cardact_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/fontc"
            android:text="是否要向管理员递交名片"
            android:gravity="center"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E4E4E4"/>
        <TextView
            android:id="@+id/cardact_comfirme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/fontc"
            android:text="确定"
            android:gravity="center"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E4E4E4"/>
        <TextView
            android:id="@+id/cardact_cancle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/fontc"
            android:text="取消"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
